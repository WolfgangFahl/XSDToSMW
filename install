#!/bin/bash
# WF 2020-04-29
pip="sudo -H pip3"
if [ "$USER" = "travis" ]
then
  pip=pip
fi
# py-3rdparty-mediawiki is not available on pypi.org yet @FIXME
$pip install -i https://test.pypi.org/simple/ py-3rdparty-mediawiki==0.0.2
# install other modules as specified
$pip install -r requirements.txt
if [ ! -d schema ]
then
  git clone --single-branch --branch Conference_ID https://gitlab.com/crossref/schema
else
  cd schema
  git pull
fi
